{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "jsx-quotes": ["warn", "prefer-single"],
        "eslint no-case-declarations": ["off"],
        "no-unused-vars": ["warn"]
    }
}
